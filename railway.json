{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
      "builder": "HEROKU",
      "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "sleepApplication": false,
      "multiRegionConfig": {
          "us-west1": {
              "numReplicas": 1
          }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
  }
}
